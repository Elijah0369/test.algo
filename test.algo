ALGORITHM testAlgo
VAR
    str : STRING := "Hello world.";
    i :INTEGER := 0;
    c :char :="";
    nb_vow :INTEGER := 0;
    nb_word :INTEGER := 0;
    nb_char :INTEGER := 0;
BEGIN
   WHILE (c <> ".") DO
      Read(c);
      nb_char := nb_char + 1;
      IF (c="a" OR C="e" OR c="i" OR c="o" OR c="u" OR c="y") THEN
        nb_vow := nb_vow + 1;
        END_IF
        IF (C = " " ) THEN
          nb_word := nb_word + 1;
        END_IF
   END_WHILE
   END_FOR
   write("the length of the sentence is ", nb_char+1);
   write("the number of vowls is ", nb_vow);
   write("the number of words is ", nb_word+1);

END